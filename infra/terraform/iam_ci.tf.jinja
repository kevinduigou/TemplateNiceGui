resource "google_service_account" "ci" {
  account_id   = "${var.project_id}-ci"
  display_name = "GitHub Actions CI"
}

resource "google_project_iam_binding" "ci_container_admin" {
  project = var.project_id
  role    = "roles/container.admin"
  members = ["serviceAccount:${google_service_account.ci.email}"]
}

resource "google_project_iam_binding" "ci_artifactregistry_writer" {
  project = var.project_id
  role    = "roles/artifactregistry.writer"
  members = ["serviceAccount:${google_service_account.ci.email}"]
}

resource "google_project_iam_binding" "ci_storage_admin" {
  project = var.project_id
  role    = "roles/storage.admin"
  members = ["serviceAccount:${google_service_account.ci.email}"]
}
