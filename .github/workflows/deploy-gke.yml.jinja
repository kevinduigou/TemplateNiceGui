name: Build and deploy to GKE

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    env:
      PROJECT_ID: {% raw %}${{ secrets.GCP_PROJECT_ID }}{% endraw %}
      REGION: {% raw %}${{ secrets.GCP_REGION }}{% endraw %}
      CLUSTER: {% raw %}${{ secrets.GKE_CLUSTER }}{% endraw %}
      IMAGE: {% raw %}${{ secrets.GCP_ARTIFACT_IMAGE }}{% endraw %}
      K8S_NAMESPACE: {{ project_slug }}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up gcloud
        uses: google-github-actions/setup-gcloud@v2
        with:
          project_id: {% raw %}${{ env.PROJECT_ID }}{% endraw %}
          service_account_key: {% raw %}${{ secrets.GCP_SA_KEY }}{% endraw %}
          export_default_credentials: true

      - name: Configure Docker auth
        run: gcloud auth configure-docker {% raw %}${{ env.REGION }}{% endraw %}-docker.pkg.dev --quiet

      - name: Build & push image
        run: |
          docker build -t $IMAGE:{% raw %}${{ github.sha }}{% endraw %} .
          docker push $IMAGE:{% raw %}${{ github.sha }}{% endraw %}

      - name: Get GKE credentials
        run: |
          gcloud container clusters get-credentials $CLUSTER --region $REGION --project $PROJECT_ID

      - name: Inject image tag in manifests
        run: |
          sed -i "s/IMAGE_TAG/{% raw %}${{ github.sha }}{% endraw %}/g" k8s/fastapi-deployment.yaml
{% if use_rq_worker %}
          sed -i "s/IMAGE_TAG/{% raw %}${{ github.sha }}{% endraw %}/g" k8s/rq-worker-deployment.yaml
{% endif %}

      - name: Apply Kubernetes manifests
        run: |
          kubectl apply -f k8s/namespace.yaml || true
          kubectl apply -f k8s/fastapi-deployment.yaml
          kubectl apply -f k8s/fastapi-service.yaml
          kubectl apply -f k8s/fastapi-hpa.yaml
{% if use_rq_worker %}
          kubectl apply -f k8s/rq-worker-deployment.yaml
          kubectl apply -f k8s/rq-worker-hpa.yaml || true
          kubectl apply -f k8s/keda-scaledobject.yaml || true
{% endif %}
          kubectl apply -f k8s/ingress.yaml
        env:
          KUBECONFIG: {% raw %}${{ runner.temp }}{% endraw %}/kubeconfig
