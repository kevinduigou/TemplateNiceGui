    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: {{ project_name }} Dashboard",
            "type": "debugpy",
            "request": "launch",
            "module": "{{ project_slug }}.app",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "DEBUG_MODE": "1"
            }
        }{%- if use_rq_worker %},
        {
            "name": "Debug: RQ Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "rq.cli",
            "args": [
                "worker",
                "--url",
                "redis://redis:6379",
                "default"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }{%- endif %}
    ]
}
