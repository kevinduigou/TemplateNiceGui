apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: rq-worker-hpa
  namespace: {{ project_slug | replace('_', '-') }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: rq-worker
  minReplicas: 1
  maxReplicas: 10
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
