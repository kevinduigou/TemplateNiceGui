apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: fastapi-ingress
  namespace: {{ project_slug | replace('_', '-') }}
  annotations:
    kubernetes.io/ingress.class: "gce"
spec:
  rules:
    - host: your.domain.example.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: fastapi
                port:
                  number: 80
