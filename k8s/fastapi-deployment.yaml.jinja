apiVersion: apps/v1
kind: Deployment
metadata:
  name: fastapi
  namespace: {{ project_slug | replace('_', '-') }}
  labels:
    app: fastapi
spec:
  replicas: 2
  selector:
    matchLabels:
      app: fastapi
  template:
    metadata:
      labels:
        app: fastapi
    spec:
      containers:
        - name: fastapi
          image: europe-west1-docker.pkg.dev/PROJECT/REPO/app:IMAGE_TAG
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8000
          env:
            - name: REDIS_URL
              value: redis://redis:6379/0
          resources:
            requests:
              cpu: 250m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
