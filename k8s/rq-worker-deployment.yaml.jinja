apiVersion: apps/v1
kind: Deployment
metadata:
  name: rq-worker
  namespace: {{ project_slug | replace('_', '-') }}
  labels:
    app: rq-worker
spec:
  replicas: 1
  selector:
    matchLabels:
      app: rq-worker
  template:
    metadata:
      labels:
        app: rq-worker
    spec:
      containers:
        - name: rq-worker
          image: europe-west1-docker.pkg.dev/PROJECT/REPO/app:IMAGE_TAG
          imagePullPolicy: IfNotPresent
          command: ["python", "-m", "{{ project_slug }}.worker"]
          env:
            - name: REDIS_URL
              value: redis://redis:6379/0
          resources:
            requests:
              cpu: 250m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
