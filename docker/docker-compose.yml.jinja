services:
{%- if async_task_backend == 'redis_rq' %}
  # Redis service for RQ (Redis Queue)
  redis:
    image: redis:7-alpine
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    command: redis-server --appendonly yes
    networks:
      - {{ project_slug }}-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 3s
      retries: 5

  # RQ Worker service
  worker:
    build:
      context: ..
      dockerfile: docker/Dockerfile.worker
      args:
        PROJECT_NAME: {{ project_slug }}
    restart: unless-stopped
    depends_on:
      redis:
        condition: service_healthy
    volumes:
      - ../data:/opt/{{ project_slug }}/data
    environment:
      - REDIS_URL=redis://redis:6379
{%- if use_oauth %}
      - GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
{%- if oauth_providers in ['twitter', 'both'] %}
      - TWITTER_CLIENT_ID=${TWITTER_CLIENT_ID}
      - TWITTER_CLIENT_SECRET=${TWITTER_CLIENT_SECRET}
{%- endif %}
      - STORAGE_SECRET=${STORAGE_SECRET}
{%- endif %}
    networks:
      - {{ project_slug }}-network
{%- endif %}

  # NiceGUI Frontend service
  nicegui:
    build:
      context: ..
      dockerfile: docker/Dockerfile.nicegui
      args:
        PROJECT_NAME: {{ project_slug }}
    restart: unless-stopped
{%- if async_task_backend == 'redis_rq' %}
    depends_on:
      redis:
        condition: service_healthy
      worker:
        condition: service_started
{%- endif %}
    ports:
      - "8080:8080"
    volumes:
      - ../data:/opt/{{ project_slug }}/data
    environment:
{%- if async_task_backend == 'redis_rq' %}
      - REDIS_URL=redis://redis:6379
{%- endif %}
{%- if use_oauth %}
      - GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
{%- if oauth_providers in ['twitter', 'both'] %}
      - TWITTER_CLIENT_ID=${TWITTER_CLIENT_ID}
      - TWITTER_CLIENT_SECRET=${TWITTER_CLIENT_SECRET}
{%- endif %}
      - STORAGE_SECRET=${STORAGE_SECRET}
{%- endif %}
    networks:
      - {{ project_slug }}-network

{%- if async_task_backend == 'redis_rq' %}

volumes:
  redis-data:
{%- endif %}

networks:
  {{ project_slug }}-network:
    driver: bridge
