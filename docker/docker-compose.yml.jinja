services:
  # Base image for Python environment
  base:
    build:
      context: ..
      dockerfile: docker/Dockerfile
      target: base
      args:
        PYTHON_VERSION: "{{ python_version }}"
        PROJECT_WORKDIR: /opt/{{ project_slug }}
    image: {{ project_slug }}:base
    command: ["tail", "-f", "/dev/null"]  # Keep container running
    env_file:
      - ../.env
    networks:
      - {{ project_slug }}-network

{%- if async_task_backend == 'redis_rq' %}

  # Redis service for RQ (Redis Queue)
  redis:
    image: redis:7-alpine
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    command: redis-server --appendonly yes
    networks:
      - {{ project_slug }}-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 3s
      retries: 5

  # RQ Worker service
  worker:
    build:
      context: ..
      dockerfile: docker/Dockerfile.worker
      args:
        PROJECT_NAME: {{ project_slug }}
    restart: unless-stopped
    env_file:
      - ../.env
    depends_on:
      base:
        condition: service_started
      redis:
        condition: service_healthy
    volumes:
      - app-data:/opt/{{ project_slug }}/data
    environment:
      - REDIS_URL=redis://redis:6379
    networks:
      - {{ project_slug }}-network
{%- endif %}

  # NiceGUI Frontend service
  nicegui:
    build:
      context: ..
      dockerfile: docker/Dockerfile.nicegui
      args:
        PROJECT_NAME: {{ project_slug }}
    restart: unless-stopped
    env_file:
      - ../.env
    depends_on:
      base:
        condition: service_started
{%- if async_task_backend == 'redis_rq' %}
      redis:
        condition: service_healthy
      worker:
        condition: service_started
{%- endif %}
    ports:
      - "8080:8080"
    volumes:
      - app-data:/opt/{{ project_slug }}/data
    environment:
{%- if async_task_backend == 'redis_rq' %}
      - REDIS_URL=redis://redis:6379
{%- endif %}
    networks:
      - {{ project_slug }}-network

volumes:
  app-data:  # Shared volume for SQLite database and application data
{%- if async_task_backend == 'redis_rq' %}
  redis-data:  # Volume for Redis persistence
{%- endif %}

networks:
  {{ project_slug }}-network:
    driver: bridge
