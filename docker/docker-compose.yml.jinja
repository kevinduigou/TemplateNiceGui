services:
  # Base image build
  base:
    build:
      context: ..
      dockerfile: docker/Dockerfile
      target: base
      args:
        USERNAME: ${USER:-appuser}
        USER_UID: ${UID:-1000}
        USER_GID: ${GID:-1000}
    image: {{ project_slug }}:base

{%- if use_rq_worker %}

  # Redis service for RQ (Redis Queue)
  redis:
    image: redis:7-alpine
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    command: redis-server --appendonly yes
    networks:
      - {{ project_slug }}-network

  # RQ Worker service
  worker:
    build:
      context: ..
      dockerfile: docker/Dockerfile.worker
      args:
        PROJECT_NAME: {{ project_slug }}
    restart: unless-stopped
    depends_on:
      - base
      - redis
    volumes:
      - ../data:/opt/{{ project_slug }}/data
    environment:
      - REDIS_URL=redis://redis:6379
{%- if use_oauth %}
      - GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
{%- if oauth_providers in ['twitter', 'both'] %}
      - TWITTER_CLIENT_ID=${TWITTER_CLIENT_ID}
      - TWITTER_CLIENT_SECRET=${TWITTER_CLIENT_SECRET}
{%- endif %}
      - STORAGE_SECRET=${STORAGE_SECRET}
{%- endif %}
    networks:
      - {{ project_slug }}-network
{%- endif %}

  # NiceGUI Dashboard service
  nicegui:
    build:
      context: ..
      dockerfile: docker/Dockerfile.nicegui
      args:
        PROJECT_NAME: {{ project_slug }}
    restart: unless-stopped
    depends_on:
      - base
{%- if use_rq_worker %}
      - redis
      - worker
{%- endif %}
    ports:
      - "8080:8080"
    volumes:
      - ../data:/opt/{{ project_slug }}/data
    environment:
{%- if use_rq_worker %}
      - REDIS_URL=redis://redis:6379
{%- endif %}
{%- if use_oauth %}
      - GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
{%- if oauth_providers in ['twitter', 'both'] %}
      - TWITTER_CLIENT_ID=${TWITTER_CLIENT_ID}
      - TWITTER_CLIENT_SECRET=${TWITTER_CLIENT_SECRET}
{%- endif %}
      - STORAGE_SECRET=${STORAGE_SECRET}
{%- endif %}
    networks:
      - {{ project_slug }}-network

{%- if use_rq_worker %}

volumes:
  redis-data:
{%- endif %}

networks:
  {{ project_slug }}-network:
    driver: bridge
