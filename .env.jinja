# OAuth Configuration
# Copy this file to .env and fill in your actual credentials

{%- if oauth_providers in ['google', 'both'] %}
# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
{%- endif %}

{%- if oauth_providers in ['twitter', 'both'] %}
# Twitter OAuth Credentials
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
{%- endif %}

# Application Secret
# Generate a random secret for session management
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
STORAGE_SECRET=your_random_secret_here


# Base URL for OAuth callbacks
# Set this to match how you access the application
# Examples:
# - Direct access to container: http://localhost:8080
# - Port forwarded: http://localhost:34421
# - Codespaces: https://your-codespace-url.github.dev
BASE_URL=http://localhost:34421



{%- if use_sqlite_db %}
# Database Configuration
# Database URL for SQLAlchemy
# Default: SQLite database stored in data directory
# For PostgreSQL: postgresql://username:password@host:port/database
# For production PostgreSQL: postgresql://user:pass@cloudsql-proxy:5432/dbname
DATABASE_URL=sqlite:///data/{{ project_slug }}.db
{%- endif %}

{%- if async_task_backend == 'redis_rq' %}
# Redis Configuration
# Redis URL for RQ job queue
# Use 'redis' as hostname when running in Docker (docker-compose service name)
# Use 'localhost' when running locally outside Docker
REDIS_URL=redis://redis:6379/0
{%- endif %}
